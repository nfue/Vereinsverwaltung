@{
    ViewData["Title"] = "Interessengruppen";
}
<h1>Interessengruppen</h1>

@{
    if (User.IsInRole("Admin"))
    {
        <form asp-action="CreateEdit">
            <button type="submit" class="btn btn-primary">+ Interessengruppe erstellen</button>
        </form>
    }   
}

<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (Interessengruppe interessengruppe in ViewBag.Interessengruppen)
            {
                <tr>
                    <td>@interessengruppe.Id</td>
                    <td>@interessengruppe.Name</td>
                </tr>

            }
        }
    </tbody>
</table>
